<?xml version='1.0' encoding='utf-8'?>
<widget id="org.safecoin.safecoinwallet" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SafeCoin Wallet</name>
    <description>
        SafeCoin Wallet
    </description>
    <author email="kendricktan0814@gmail.com" href="https://kndrck.co">
        Kendrick Tan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<preference name="cordova-custom-config-autorestore" value="true" />
        <custom-preference name="android-minSdkVersion" value="19" />
		<custom-config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />
        </custom-config-file>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <custom-preference name="iosPersistentFileLocation" value="Compatibility" />
    <custom-preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <custom-preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <hook src="./scripts/build.sh" type="before_prepare" />
    <icon src="./assets/img/safecoin.png" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <access origin="*" />
    <allow-intent href="*" />
    <engine name="android" spec="^7.1.0" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
    <plugin name="cordova-plugin-http" spec="^1.2.0" />
    <plugin name="cordova-clipboard" spec="^1.1.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="^1.1.4" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-google-analytics" spec="^1.8.3" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />
    <plugin name="cordova-custom-config" spec="^5.0.2" />
</widget>
